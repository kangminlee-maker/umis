# ========================================
# UMIS RAG Environment Variables Template
# ========================================
# 
# Copy this file to .env and fill in your values:
#   cp env.template .env
#
# ========================================

# ========================================
# OpenAI API (하나의 키로 모든 모델 사용 가능!)
# ========================================
OPENAI_API_KEY=sk-...

# Organization ID (조직 계정인 경우만 설정, 개인 계정은 주석 처리)
# OPENAI_ORG_ID=org-your-org-id

# ========================================
# Embeddings API (벡터 변환용)
# ========================================
EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_DIMENSION=1536

# ========================================
# Chat API (대화/생성용)
# ========================================
LLM_MODEL=gpt-4-turbo-preview
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=4096

# Vector Database (Choose one)
# Option 1: Chroma (Local - for development)
VECTOR_DB=chroma
CHROMA_PERSIST_DIR=./data/chroma

# Option 2: Pinecone (Cloud - for production)
# VECTOR_DB=pinecone
# PINECONE_API_KEY=...
# PINECONE_ENVIRONMENT=us-east-1
# PINECONE_INDEX_NAME=umis-rag

# Embeddings
EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_DIMENSION=1536

# RAG Configuration
CHUNK_SIZE=800
CHUNK_OVERLAP=100
TOP_K_RESULTS=5

# Agent Configuration
AGENT_TEMPERATURE=0.7
AGENT_MAX_ITERATIONS=10
AGENT_VERBOSE=true

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/umis_rag.log

# LangSmith (Optional - for monitoring)
# LANGCHAIN_TRACING_V2=true
# LANGCHAIN_API_KEY=...
# LANGCHAIN_PROJECT=umis-rag

# Development
DEV_MODE=true
CACHE_ENABLED=true

